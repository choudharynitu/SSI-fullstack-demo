{
  "name": "veramo-wallet-extension",
  "version": "0.1.0",
  "scripts": {
    "dev": "esbuild src/ui/index.tsx --bundle --outfile=dist/ui.js --jsx=automatic --platform=browser --watch",
    "build": "esbuild src/background.ts --bundle --outfile=dist/background.js --platform=browser --format=esm && esbuild src/ui/index.tsx --bundle --outfile=dist/ui.js --jsx=automatic --platform=browser && cp manifest.json dist/ && cp src/ui.html dist/ && cp public/* dist/"
  },
  "dependencies": {
    "@veramo/core": "^5.5.0",
    "@veramo/data-store-json": "^5.5.0",
    "@veramo/did-manager": "^5.5.0",
    "@veramo/did-provider-key": "^5.5.0",
    "@veramo/key-manager": "^5.5.0",
    "@veramo/kms-local": "^5.5.0",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "jose": "^6.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.12",
    "@types/node": "^24.5.2",
    "esbuild": "^0.21.4",
    "typescript": "^5.4.0"
  }
}
