{
  "manifest_version": 3,
  "name": "Demo SSI Wallet",
  "version": "0.1.0",
  "description": "Minimal OID4VCI wallet for demo purposes.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "notifications"
  ],
  
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/*",
        "http://127.0.0.1:*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "ui.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}