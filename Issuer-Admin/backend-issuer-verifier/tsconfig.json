{
    "compilerOptions": {
      "preserveConstEnums": true,
      "strict": true,
      "target": "esnext",
      "module": "esnext",
      "rootDir": "./",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "downlevelIteration": true,
      "typeRoots": ["node_modules/@types"],
      "resolveJsonModule": true,
      "skipLibCheck": true
      
    },
    "include": ["src","./**/*.ts", "global.d.ts", "src/types"],
    "exclude": ["node_modules"]
  }